<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.csit.ramesh.game.MainActivity">
    <TextView
        android:layout_margin="20dp"

        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Score: "/>
    <TextView
        android:layout_margin="20dp"

        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Score: "/>


    <ImageView
        android:src="@drawable/ic_brightness_1_black_24dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/orange"
        />
    <ImageView
        android:src="@drawable/ic_favorite_black_24dp"
        android:id="@+id/pink"
        android:layout_width="20dp"
        android:layout_height="20dp"
        />
    <ImageView
        android:src="@drawable/ic_camera_enhance_black_24dp"
        android:id="@+id/li"
        android:layout_width="20dp"
        android:layout_height="20dp"
        />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:id="@+id/tap"
    android:layout_marginTop="200dp"
    android:text="Tap To Start !"
    android:textSize="30sp"/>
    <ImageView
        android:id="@+id/box_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_directions_walk_black_24dp" />




    <FrameLayout
        android:layout_width="fill_parent"
        android:id="@+id/frame"
        android:layout_height="fill_parent"></FrameLayout>
    <ImageView
        android:id="@+id/black"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_error_black_24dp"
        />
    <ImageView
        android:id="@+id/plan"
        android:layout_width="70dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="500dp"
        android:layout_height="40dp"
        android:src="@drawable/plane"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/item"
        android:layout_width="30dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="50dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
        android:visibility="invisible"
        />


    <Button
        android:id="@+id/boxMove"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_error_black_24dp"
        android:text="move"
        android:visibility="invisible" />


    <TextView
        android:layout_width="fill_parent"
        android:text="Developed By : Ramesh Pokhrel"
        android:layout_height="wrap_content"
        android:textColor="#efc1c1"
        android:id="@+id/show"
        android:singleLine="true"
        android:visibility="invisible"
        />
    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:text="Live : "
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:textColor="#efc1c1"
        android:id="@+id/live"
        android:singleLine="true"
        android:textSize="20dp"
        android:visibility="invisible"
        />

</RelativeLayout>
